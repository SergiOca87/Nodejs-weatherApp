    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>A Node JS App</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div class="app-wrap">
            {{>header}}
                <div class="container app-form">
                    <div class="app-form-inner-wrap">
                        <h1>{{ title }}</h1>
                        <p>A Node and Express weather App</p>
                        <p>Enter a location to fetch it's weather forecast for the current day</p>
                        <form>
                            <input type="text" placeholder="Location" id="weatherInputLocation">
                            <button>Fetch weather</button>
                        </form>
                        
                        <div class="weather-display-wrap">
                            <p class="weather-display-location"></p>
                            <p class="weather-display-info"></p>
                        </div>
                    </div>
                </div>
            {{>footer}}
        </div>
        <script src="../js/script.js" async defer></script>
    </body>
</html>